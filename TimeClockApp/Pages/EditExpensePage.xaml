<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TimeClockApp.Pages.EditExpensePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Converter="clr-namespace:TimeClockApp.Converters"
    xmlns:models="clr-namespace:TimeClockApp.Shared.Models;assembly=TimeClockApp.Shared"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:TimeClockApp.ViewModels"
    Title="Edit Expence">
    <ContentPage.BindingContext>
        <vm:EditExpensePageViewModel x:Name="viewModel" />
    </ContentPage.BindingContext>
    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding ToggleHelpInfoBoxCommand}" IconImageSource="help_icon.png" />
    </ContentPage.ToolbarItems>
    <ContentPage.Resources>
        <ResourceDictionary>
            <Converter:DateOnlyToDateTimeConverter x:Key="dateOnlyToDateTimeConverter" />
        </ResourceDictionary>
        <Style x:Key="InvalidEntryStyle" TargetType="Entry">
            <Setter Property="TextColor" Value="Red" />
        </Style>
        <Style x:Key="ValidEntryStyle" TargetType="Entry">
            <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
        </Style>

    </ContentPage.Resources>
    <ScrollView>
        <StackLayout>
            <Border
                x:Name="helpbox"
                Padding="8"
                IsVisible="{Binding HelpInfoBoxVisible}"
                VerticalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
                <Label
                    LineBreakMode="WordWrap"
                    Style="{StaticResource LabelSmall}"
                    Text="Edit Expence Page. &#10;&#10;Make changes or delete the expense item. &#10;&#10;Note: This is the only page you will see the contents of the Memo displayed." />
            </Border>

            <Border>
                <Grid ColumnDefinitions="Auto,10,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,8,Auto">
                    <Label
                        HorizontalOptions="Start"
                        Text="Project: "
                        VerticalTextAlignment="Center" />
                    <Picker
                        Grid.Column="2"
                        HorizontalOptions="Fill"
                        ItemDisplayBinding="{Binding Name}"
                        ItemsSource="{Binding ProjectList}"
                        SelectedItem="{Binding SelectedProject, Mode=TwoWay}" />
                    <Label
                        Grid.Row="1"
                        HorizontalOptions="Start"
                        Text="Phase: "
                        VerticalTextAlignment="Center" />
                    <Picker
                        Grid.Row="1"
                        Grid.Column="2"
                        HorizontalOptions="Fill"
                        ItemDisplayBinding="{Binding PhaseTitle}"
                        ItemsSource="{Binding PhaseList}"
                        SelectedItem="{Binding SelectedPhase, Mode=TwoWay}" />
                    <Label
                        Grid.Row="2"
                        Style="{StaticResource LabelSmall}"
                        Text="Category: "
                        VerticalTextAlignment="Center" />
                    <Picker
                        Grid.Row="2"
					    Grid.Column="2"
					    HorizontalOptions="Fill"
					    ItemDisplayBinding="{Binding CategoryName}"
					    ItemsSource="{Binding ExpenseTypeList}"
					    SelectedItem="{Binding SelectedExpenseType, Mode=TwoWay}"
                        VerticalTextAlignment="Center" />
                    <Label
                        Grid.Row="3"
                        Style="{StaticResource LabelSmallCenter}"
                        Text="Date: "
                        VerticalTextAlignment="Center" />
                    <DatePicker
                        Grid.Row="3"
                        Grid.Column="2"
                        Date="{Binding ExpenseDate, Converter={StaticResource dateOnlyToDateTimeConverter}, Mode=TwoWay}"
                        MaximumDate="{Binding PickerMaxDate}"
                        MinimumDate="{Binding PickerMinDate}" />
                    <Label
                        Grid.Row="4"
                        Style="{StaticResource LabelSmall}"
                        Text="Amount: "
                        VerticalTextAlignment="Center" />
                    <Entry
                        Grid.Row="4"
                        Grid.Column="2"
                        FontSize="Small"
                        HorizontalOptions="Fill"
                        Keyboard="Numeric"
                        Placeholder="Amount"
                        x:Name="entryAmountBox"
                        Text="{Binding Amount, Mode=TwoWay}"
                        VerticalTextAlignment="Center">
                        <Entry.Behaviors>
                            <toolkit:NumericValidationBehavior
                                BindingContext="{Binding Path=BindingContext, Source={x:Reference entryAmountBox}, x:DataType=Entry}"
                                Flags="ValidateOnValueChanged"
                                InvalidStyle="{StaticResource InvalidEntryStyle}"
                                ValidStyle="{StaticResource ValidEntryStyle}"
                                MaximumDecimalPlaces="2"
                                MinimumValue="0.0" />
                        </Entry.Behaviors>
                    </Entry>
                    <Label
                        Grid.Row="5"
                        Style="{StaticResource LabelSmall}"
                        Text="Memo: "
                        VerticalTextAlignment="Center" />
                    <Entry
                        Grid.Row="5"
                        Grid.Column="2"
                        FontSize="Small"
                        HorizontalOptions="Fill"
                        Placeholder="Memo"
                        x:Name="entryMemoBox"
                        Text="{Binding Memo, Mode=TwoWay}"
                        VerticalTextAlignment="Center">
                        <Entry.Behaviors>
                            <toolkit:TextValidationBehavior 
                                BindingContext="{Binding Path=BindingContext, Source={x:Reference entryMemoBox}, x:DataType=Entry}"
                                InvalidStyle="{StaticResource InvalidEntryStyle}"
                                ValidStyle="{StaticResource ValidEntryStyle}"
								Flags="ValidateOnValueChanged"
                                DecorationFlags="NormalizeWhiteSpace"
								MinimumLength="0"
                                RegexPattern="[A-Za-z0-9\s\S]+"
                                RegexOptions="Multiline" />
                        </Entry.Behaviors>
                    </Entry>
                    <Button
                        Grid.Row="6"
                        Grid.ColumnSpan="3"
                        Margin="20,10"
                        Command="{Binding EditExpenseCommand}"
                        CornerRadius="10"
                        HorizontalOptions="Fill"
                        Text="Save" />
                    <BoxView
                        Grid.Row="7"
                        Grid.ColumnSpan="3"
                        HeightRequest="2"
                        HorizontalOptions="Fill" />
                    <Button
                        Grid.Row="8"
                        Grid.ColumnSpan="3"
                        Margin="20,10"
                        Command="{Binding DelExpenseCommand}"
                        CornerRadius="10"
                        HorizontalOptions="Fill"
                        Text="Delete" />
                </Grid>
            </Border>
        </StackLayout>
    </ScrollView>
</ContentPage>